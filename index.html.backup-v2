<script>
// Demo form handler
document.getElementById('demoForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const date = document.getElementById('demoDate').value;
    const state = document.getElementById('demoState').value;
    
    try {
        const res = await fetch('/api/v1/calculate-deadline', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                invoice_date: date,
                state: state,
                role: 'material_supplier'
            })
        });
        
        const data = await res.json();
        
        document.getElementById('demoStateDisplay').textContent = `${state} ‚Ä¢ Material Supplier ‚Ä¢ Invoice Date: ${date}`;
        document.getElementById('prelimDeadline').textContent = data.preliminary_notice_deadline || 'N/A';
        document.getElementById('lienDeadline').textContent = data.lien_filing_deadline || 'N/A';
        document.getElementById('demoResult').classList.remove('hidden');
        
        // Smooth scroll to result
        document.getElementById('demoResult').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    } catch (err) {
        alert('Demo calculation failed. Please try again or start your free trial.');
    }
});

// Set default date to today
document.getElementById('demoDate').valueAsDate = new Date();
</script>
